---
import { data } from '../lib/sanityData';
const {
    useGradient
} = Astro.props
---

<span class={useGradient ? 'text-gradient' : ''}>{data.name}</span>
<style is:global>
    .text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
</style>