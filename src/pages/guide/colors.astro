---
import Layout from "../../layouts/Layout.astro"
import ColorPalette from "../../components/ColorPalette.astro";
import CompanyName from "../../components/CompanyName.astro";
import Navigation from "../../components/Navigation.astro";
import Footer from "../../components/Footer.astro";

export const title = "Colors";
export const bodyContent = "Your brands collection of colors"
---
<!-- Refactor into an mdx file to make some of the frontmatter exportable, https://docs.astro.build/en/reference/api-reference/#markdown-files -->
<Layout title="Color Palette">
    <main>
        <h1><span class="text-gradient"><CompanyName /></span> color palette</h1>
        <Navigation />
        <h2>Some fluff text</h2>
        <ColorPalette />
    </main>
    <Footer />
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 70ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
        margin-bottom: 0.2em;
	}
	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}
	.instructions {
		line-height: 1.6;
		margin: 1rem 0;
		border: 1px solid rgba(var(--accent), 25%);
		background-color: white;
		padding: 1rem;
		border-radius: 0.4rem;
	}
	.instructions code {
		font-size: 0.875em;
		font-weight: bold;
		background: rgba(var(--accent), 12%);
		color: rgb(var(--accent));
		border-radius: 4px;
		padding: 0.3em 0.45em;
	}
	.instructions strong {
		color: rgb(var(--accent));
	}
	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 1rem;
		padding: 0;
	}
</style>
